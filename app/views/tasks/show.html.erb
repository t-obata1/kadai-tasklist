<h1>id:<%= @task.id %>のタスク詳細ページ</h1>
  <table class ="table table-bordered">
    <tr>
      <th>id</th>
      <td><%= @task.id %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @task.status %></td>
    </tr>
    <tr>
      <th>タスク</th>
      <th><%= @task.content %></th>
    </tr>
  </table>

<%= link_to "一覧に戻る", root_url %>
<%= link_to "このメッセージを編集する" , edit_task_path(@task) %>
<%= link_to "このメッセージを削除する" , @task, method: :delete, data:{ confirm: "本当によろしいですか？"} %>
<%= form_with(model: task, local: true) do |f| %>

  <% if task.errors.any? %>
    <div id = "errors_explanation">
      <ul>
        <% task.errors.full_messages.each do |msg| %>
            <%= render "layouts/error_messages", model: f.object %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :status, "ステータス" %>
  <%= f.text_field :status %>

  <%= f.label :content, "タスク" %>
  <%= f.text_field :content %>
  
  <%= f.submit "投稿" %>
<% end %>